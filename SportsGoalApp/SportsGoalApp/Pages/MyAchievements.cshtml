@page
@model SportsGoalApp.Pages.MyAchievementsModel
@{
}

<h1>Achievements</h1>
<br />

@for (int i = 0; i < Model.AchievementsMatrix.Length / 2; i++)
{
    <div class="row">
        <div class="col-2">
            <p><strong>@Model.AchievementsMatrix[i, 0]</strong></p>
        </div>

        <div class="col-3">
            <p>@Model.AchievementsMatrix[i, 1]</p>
        </div>
        <div class="col-3">
            <p>
                Achievement completed:
                @if (Model.CompletedAchievementsIds[i] == true)
                {
                    <span> Yes</span>
                }
                else
                {
                    <span> No</span>
                }
            </p>
        </div>
    </div>
    <br />
}

